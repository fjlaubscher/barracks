{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
    /* Skip type checking all .d.ts files. */
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}